# Staging Environment Configuration
# Copy this to .env.staging and fill in your values
# Uses the pmc_staging database for development testing

# Database (points to staging DB)
DATABASE_URL=postgresql://pmc_user:password@db:5432/pmc_staging

# Frontend
FRONTEND_URL=https://perumaniacup.info
FRONTEND_PORT=443

# Debug mode
DEBUG=False

# osu! OAuth (same as production)
OSU_CLIENT_ID=your_client_id_here
OSU_CLIENT_SECRET=your_client_secret_here
OSU_REDIRECT_URI=http://your-domain/auth/callback

# JWT Secret (should match production for auth compatibility)
SECRET_KEY=your-super-secret-key-change-this

# Internal service authentication
INTERNAL_SECRET=internal-service-secret-change-this
