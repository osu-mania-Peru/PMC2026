# Example Environment Configuration
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Frontend
FRONTEND_URL=http://your-frontend-url
FRONTEND_PORT=80

# Debug mode (True for dev, False for production)
DEBUG=True

# osu! OAuth (get from https://osu.ppy.sh/home/account/edit)
OSU_CLIENT_ID=your_client_id_here
OSU_CLIENT_SECRET=your_client_secret_here
OSU_REDIRECT_URI=http://your-domain/auth/callback

# JWT Secret (generate a strong random key)
SECRET_KEY=your-super-secret-key-change-this

# Internal service authentication (shared between auth-service and backend)
INTERNAL_SECRET=internal-service-secret-change-this
